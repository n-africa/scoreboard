{
  "private": true,
  "name": "scoreboard",
  "scripts": {
    "start": "browser-sync start --server public --files public",
    "deploy": "netlify deploy --prod --dir=public",
    "setup-deploy": "app-app --deploy && npm run deploy",
    "postdeploy": "echo 'Your site was deployed to https://scoreboard-n-africa.netlify.app/'"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.1",
    "stylelint-config-standard": "^20.0.0"
  },
  "homepage": "https://scoreboard-n-africa.netlify.app/"
}